#!/bin/make

# Fortran compiler command
FC = ifort

# Fortran compiler flags
FCFLAGS  = -m64 -O3 -traceback -assume realloc_lhs -extend-source 132 -qopt-report-phase=vec
F77FLAGS = -m64 -O3 -traceback                                        -qopt-report-phase=vec
FCFLAGS  = -m64 -g  -traceback -assume realloc_lhs -extend-source 132 -check bounds,uninit,pointers,stack -stand f03
F77FLAGS = -m64 -g  -traceback                                        -check bounds,uninit,pointers,stack
# Fortran .mod files, e.g. -I<include dir> if you have headers in a nonstandard directory <include dir>
FCINCLUDE = -I/Users/robert/Applications/ifort/include -I/opt/local/include

# linker flags, e.g. -L<lib dir> if you have libraries in a nonstandard directory <lib dir>
LDFLAGS = -L/Users/robert/Applications/ifort/lib -L/opt/local/lib

# libraries to pass to the linker, e.g. -l<library>
LIBS = -lnetcdff -lnetcdf # -mkl

# build directory
BUILDDIR = build

# these files will not be compiled
BLACKLIST =
