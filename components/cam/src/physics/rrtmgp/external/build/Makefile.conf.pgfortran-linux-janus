#!/bin/make
# On a Janus compile node, load the following modules
# 
# module load pgi/15.3 netcdf/4.3.3.1 nco/4.5.2
# 
# Fortran compiler command
FC = pgfortran 

# Fortran compiler flags
FCFLAGS = -g -Mbounds -Mchkptr -Mstandard -Kieee -Mchkstk -Mallocatable=03 flag

# Fortran .mod files, e.g. -I<include dir> if you have headers in a nonstandard directory <include dir>
#FCINCLUDE = $(nf-config --fflags)
FCINCLUDE = -I/curc/tools/x86_64/rh6/software/netcdf/4.3.3.1/pgi/15.3/include

# linker flags, e.g. -L<lib dir> if you have libraries in a nonstandard directory <lib dir>
LDFLAGS = -L/curc/tools/x86_64/rh6/software/netcdf/4.3.3.1/pgi/15.3/lib  -L/curc/tools/x86_64/rh6/software/netcdf/4.3.3.1/pgi/15.3/lib 

# libraries to pass to the linker, e.g. -l<library>
#LIBS = $(nf-config --flibs)
LIBS = -lnetcdff -lnetcdf

# build directory
BUILDDIR = build

# these files will not be compiled
BLACKLIST =
