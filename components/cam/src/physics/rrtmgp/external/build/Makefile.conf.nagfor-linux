#!/bin/make

# Fortran compiler command
FC = nagfor
NCHOME = /sw/wheezy-x64/netcdf_fortran-4.4.2-static-nag60
NCLIBS = -L/sw/wheezy-x64/szip-2.1-static-gccsys/lib \
         -L/sw/wheezy-x64/hdf5-1.8.13-static-gccsys/lib \
         -L/sw/wheezy-x64/netcdf-4.3.3.1-static-gccsys/lib


# Fortran compiler flags
FCFLAGS = -g -time -f2003 -ieee=stop -gline -C=all

# Fortran .mod files, e.g. -I<include dir> if you have headers in a nonstandard directory <include dir>
FCINCLUDE = -I${NCHOME}/include

# linker flags, e.g. -L<lib dir> if you have libraries in a nonstandard directory <lib dir>
LDFLAGS = #-L${NCHOME}/lib ${NCLIBS}

# libraries to pass to the linker, e.g. -l<library>
LIBS = -L/sw/wheezy-x64/netcdf_fortran-4.4.2-static-nag60/lib -lnetcdff \
       -L/sw/wheezy-x64/szip-2.1-static-gccsys/lib \
       -L/sw/wheezy-x64/hdf5-1.8.13-static-gccsys/lib \
       -L/sw/wheezy-x64/netcdf-4.3.3.1-static-gccsys/lib \
       -lnetcdf -lhdf5_hl -lhdf5 -lsz -lz -lm -ldl

# build directory
BUILDDIR = build

# these files will not be compiled
#BLACKLIST =
