#!/bin/make

# Fortran compiler command
FC = ifort
NCHOME = /sw/wheezy-x64/netcdf_fortran-4.4.2-static-intel15

# Fortran compiler flags
FCFLAGS = -m64 -g -traceback -extend-source 132 -check bounds,pointers,stack,uninit
# Fortran .mod files, e.g. -I<include dir> if you have headers in a nonstandard directory <include dir>
FCINCLUDE = -I${NCHOME}/include

# linker flags, e.g. -L<lib dir> if you have libraries in a nonstandard directory <lib dir>
LDFLAGS = -L${NCHOME}/lib -L/sw/wheezy-x64/szip-2.1-static-gccsys/lib -L/sw/wheezy-x64/hdf5-1.8.13-static-gccsys/lib -L/sw/wheezy-x64/netcdf-4.3.3.1-static-gccsys/lib 

# libraries to pass to the linker, e.g. -l<library>
LIBS = -lnetcdff -lnetcdf -lnetcdf -lhdf5_hl -lhdf5 -lsz -lz -lm -ldl

# build directory
BUILDDIR = build

# these files will not be compiled
BLACKLIST =
